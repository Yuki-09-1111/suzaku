<div class="row">
  <div class="col-6">
    <%= form_with(model: tournament_result, local: true) do |f| %>
      <% if tournament_result.errors.any? %>
        <div id="error_explanation" class="alert alert-warning">
          <ul class="mb-0">
            <% tournament_result.errors.full_messages.each do |tsk| %>
              <li><%= tsk %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
      <div class="form-group">
        <%= f.label :date_of_tournament, '実施日' %>
        <%= f.text_field :date_of_tournament, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :name, '大会名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, '結果' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>

      <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>